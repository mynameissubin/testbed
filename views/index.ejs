<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="/main_style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
</head>
<body>
    <h1>Main Page</h1>
    <% if (user) { %>
        <p>Welcome, <%= user.id %>!</p>
        <form action="/logout" method="GET">
            <button type="submit">Logout</button>
        </form>
        <a href="/board_main"><button type="">게시판</button></a> <!-- 게시판으로 이동하는 링크 -->
        <a href="/notices"><button type="">공지사항</button></a>
        <a href="/edit_profile"><button type="">회원정보 수정</button></a> <!-- 회원정보 수정 버튼 -->
        <% if (user.role === 'admin') { %>
            <a href="/dashboard"><button type="">사용자 관리</button></a> <!-- 대시보드로 이동하는 링크 -->
        <% } %>
    <% } else { %>
        <p>Please <a href="/login">login</a></p>
    <% } %>
</body>
</html>
