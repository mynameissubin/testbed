
<!-- views/edit_post.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="/edit_post_style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>
</head>
<body>
    <h1>게시글 수정</h1>
    
    <form action="/board_main/<%= post.post_id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <!-- <label for="title">제목:</label><br> -->
        <input type="text" id="title" name="title" value="<%= post.title %>" required placeholder="제목"><br>
        <!-- <label for="content">내용:</label><br> -->
        <textarea id="content" name="content" required placeholder="내용을 입력하세요."><%= post.content %></textarea><br>
        <!-- <label for="file">파일:</label><br> -->
        <input type="file" id="file" name="file"><br>
        <div class="button-container">
        <button type="submit">수정하기</button>
    </form>
    <a href="/board_main"><button type="">글 목록보기</button></a>
</div>

<script>
    const maliciousScript = "<%= post.title %>";
    const titleElement = document.getElementById('title');
    titleElement.value = maliciousScript;

    const contentElement = document.getElementById('content');
    contentElement.innerHTML = "<%= post.content %>";
</script>
</body>
</html>
